<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="triangle" class="com.samples.Triangle">
	<property name="type" value="Equilateral"></property>
	</bean>
	<bean id="address" class="com.samples.Address">
	<constructor-arg value="Palakkad"></constructor-arg>
	<constructor-arg value="Kerala"></constructor-arg>
	<constructor-arg value="India"></constructor-arg>
	</bean>
	<bean id="employee" class="com.samples.Employee">
	<constructor-arg value="1" type="int"></constructor-arg>
	<constructor-arg value="Sanjay"></constructor-arg>
	<constructor-arg><ref bean="address"/></constructor-arg>
	</bean>
	<bean id="employees" class="com.samples.Employees">
	<property name="id" value="1"></property>
	<property name="name" value="sanjay"></property>
	<property name="address" ref="address"></property>
	</bean>
</beans>